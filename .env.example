# AssetHub Enterprise - Environment Configuration Template
# Copy this file to .env.local and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="AssetHub Enterprise"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
DATABASE_URL="postgresql://assethub:password123@localhost:5432/assethub_dev"
# Connection pooling
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
# Redis for caching and background jobs
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================================================
# AUTHENTICATION (OIDC)
# =============================================================================
# Auth0 Configuration (replace with your Auth0 domain)
OIDC_ISSUER_URL="https://dev-assethub.eu.auth0.com"
OIDC_CLIENT_ID="your_auth0_client_id_here"
OIDC_CLIENT_SECRET="your_auth0_client_secret_here"
OIDC_JWKS_URI="https://dev-assethub.eu.auth0.com/.well-known/jwks.json"
OIDC_AUDIENCE="assethub-api"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-signing-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Session Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-for-session-encryption"

# =============================================================================
# COMPANY BRANDING
# =============================================================================
# Theme: "neuefische" or "spiced" or "default"
COMPANY_BRAND="neuefische"
NEXT_PUBLIC_COMPANY_NAME="Neuefische Academy"
NEXT_PUBLIC_SUPPORT_EMAIL="support@assethub.local"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
SMTP_FROM="AssetHub <noreply@assethub.local>"

# =============================================================================
# FILE STORAGE (AWS S3 or Compatible)
# =============================================================================
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="assethub-dev-uploads"
AWS_CLOUDFRONT_URL="https://your-cloudfront-domain.com"

# =============================================================================
# SHIPPING INTEGRATIONS
# =============================================================================
# DHL API Configuration
DHL_API_KEY="your_dhl_api_key"
DHL_API_SECRET="your_dhl_api_secret"
DHL_SANDBOX_MODE="true"
DHL_ACCOUNT_NUMBER="your_dhl_account_number"
DHL_BILLING_NUMBER="your_dhl_billing_number"

# UPS API Configuration (optional)
UPS_CLIENT_ID="your_ups_client_id"
UPS_CLIENT_SECRET="your_ups_client_secret"
UPS_SANDBOX_MODE="true"

# DPD API Configuration (optional)
DPD_USERNAME="your_dpd_username"
DPD_PASSWORD="your_dpd_password"
DPD_SANDBOX_MODE="true"

# =============================================================================
# COMMUNICATION INTEGRATIONS
# =============================================================================
# Slack Integration for P1 Alerts
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
SLACK_IT_CHANNEL="#it-alerts"
SLACK_HR_CHANNEL="#hr-notifications"

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL="https://your-company.webhook.office.com/webhookb2/your-teams-webhook"

# =============================================================================
# EXTERNAL SYSTEM INTEGRATIONS  
# =============================================================================
# Jamf MDM Integration
JAMF_API_URL="https://your-company.jamfcloud.com/JSSResource"
JAMF_USERNAME="api_user"
JAMF_PASSWORD="api_password"
JAMF_SYNC_INTERVAL="24"

# HR System Webhook
HR_SYSTEM_WEBHOOK_SECRET="your_hr_webhook_secret_key"
HR_SYSTEM_API_URL="https://your-hr-system.com/api/v1"

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# Firebase Cloud Messaging
FIREBASE_SERVER_KEY="your_firebase_server_key"
FIREBASE_SENDER_ID="your_firebase_sender_id"
FIREBASE_PROJECT_ID="your_firebase_project_id"

# Expo Push Notifications
EXPO_PUSH_TOKEN="your_expo_push_token"

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# Encryption key for sensitive data (32 characters for AES-256)
ENCRYPTION_KEY="your-32-character-encryption-key"

# Rate limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# CORS origins
CORS_ORIGIN="http://localhost:3000"

# GDPR Configuration
GDPR_RETENTION_YEARS=10
GDPR_PERSONAL_DATA_RETENTION_YEARS=2
AUTO_GDPR_CLEANUP_ENABLED=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Application monitoring
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"
LOG_LEVEL="info"
ENABLE_AUDIT_LOGGING=true

# Performance monitoring
NEW_RELIC_LICENSE_KEY="your_new_relic_license_key"
DATADOG_API_KEY="your_datadog_api_key"

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development settings
ENABLE_DEBUG=false
MOCK_EXTERNAL_APIS=false
DISABLE_AUTH_IN_DEV=false

# Test database
TEST_DATABASE_URL="postgresql://test_user:test_pass@localhost:5433/assethub_test"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_MOBILE_APP=true
ENABLE_JAMF_SYNC=true
ENABLE_SLACK_ALERTS=true
ENABLE_DHL_SHIPPING=true
ENABLE_ANALYTICS=true
ENABLE_GDPR_FEATURES=true

# =============================================================================
# API RATE LIMITS & QUOTAS
# =============================================================================
# DHL API Limits
DHL_REQUESTS_PER_MINUTE=100
DHL_REQUESTS_PER_DAY=10000

# Slack API Limits  
SLACK_REQUESTS_PER_MINUTE=1
SLACK_BURST_LIMIT=10

# Jamf API Limits
JAMF_REQUESTS_PER_MINUTE=60

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Backup configuration
BACKUP_S3_BUCKET="assethub-backups"
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# Disaster recovery
DR_S3_BUCKET="assethub-disaster-recovery"
DR_REGION="eu-west-1"

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MOBILE_APP_URL="https://assethub.company.com"
NEXT_PUBLIC_API_BASE_URL="https://assethub.company.com/api"

# Deep linking
NEXT_PUBLIC_APP_SCHEME="assethub"

# =============================================================================
# ANALYTICS & REPORTING
# =============================================================================
# Analytics service
ANALYTICS_API_KEY="your_analytics_api_key"
ENABLE_PERFORMANCE_MONITORING=true

# Reporting
REPORT_EXPORT_PATH="/tmp/reports"
MAX_EXPORT_SIZE_MB=100